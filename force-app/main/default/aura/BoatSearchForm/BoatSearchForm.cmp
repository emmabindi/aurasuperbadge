<aura:component>
  <aura:attribute name="boatTypes" type="List" access="global" />
  <aura:handler name="init" value="{!this}" action="{!c.loadBoatTypes}" />

  <lightning:layout horizontalAlign="space">
    <lightning:layoutItem padding="around-small">
      <lightning:select name="boatType" label="All Types"></lightning:select>
      <!-- value is all the types plus blank at start-->
    </lightning:layoutItem>

    <lightning:layoutItem>
      <lightning:select name="search" label="Search" variant="blue" />
    </lightning:layoutItem>

    <lightning:layoutItem>
      <lightning:select name="new" label="New" variant="white" />
    </lightning:layoutItem>
  </lightning:layout>
</aura:component>
